unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Samples.Spin,
  Vcl.ExtCtrls, System.ImageList, Vcl.ImgList;

type
  TTimerEdit = class(TForm)
    seHours: TSpinEdit;
    lblHour: TLabel;
    lblMins: TLabel;
    seMins: TSpinEdit;
    lblSecs: TLabel;
    seSecs: TSpinEdit;
    pnlTitlebar: TPanel;
    imgList: TImageList;
    btnClose: TButton;
    lblChar1: TLabel;
    lblChar2: TLabel;
    procedure btnCloseClick(Sender: TObject);
    procedure seHoursChange(Sender: TObject);
    procedure seMinsChange(Sender: TObject);
    procedure FormMouseDown(Sender: TObject; Button: TMouseButton;
      Shift: TShiftState; X, Y: Integer);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  TimerEdit: TTimerEdit;

implementation

{$R *.dfm}

procedure TTimerEdit.btnCloseClick(Sender: TObject);
begin
  Self.Close;
end;

procedure TTimerEdit.FormMouseDown(Sender: TObject; Button: TMouseButton;
  Shift: TShiftState; X, Y: Integer);
const
  SC_DRAGMOVE = $F012;
begin
  if Button = mbLeft then
  begin
    ReleaseCapture;
    Perform(WM_SYSCOMMAND, SC_DRAGMOVE, 0);
  end;
end;

procedure TTimerEdit.seHoursChange(Sender: TObject);
var
  edit : TSpinEdit;
begin
  edit := TSpinEdit(Sender);

  if edit.Value < 0 then
    edit.Value := 0

end;

procedure TTimerEdit.seMinsChange(Sender: TObject);
var
  edit : TSpinEdit;
begin
  edit := TSpinEdit(Sender);
  Self.seHoursChange(Sender);

  if edit.Value > 59 then
    edit.Value := 59
end;

end.
